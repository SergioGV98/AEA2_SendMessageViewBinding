<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sergio98.sendmessageviewbinding.ViewActivity">

    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:paddingBottom="@dimen/tvUserInfo_paddingBottom"
        android:textSize="@dimen/tvUserInfo_textSize"
        android:background="@color/container"
        android:text="@string/tvUserInfoText" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:padding="@dimen/edMessage_padding"
        android:layout_marginVertical="@dimen/edMessage_marginVertical"
        android:textSize="@dimen/tvMessage_textSize"
        android:background="@color/container"
        android:text="@string/tvMessageText" />
</LinearLayout>